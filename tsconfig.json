/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
    "compileOnSave": false,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "outDir": "./dist/ROOT",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2017",
        "module": "es2020",
        "lib": [
            "es2020",
            "dom"
        ],
        "paths": {
            "@core": ["app/core"],
            "@core/*": ["app/core/*"],
            "@shared": ["app/shared"],
            "@shared/*": ["app/shared/*"],
            "@layout": ["app/layout"],
            "@layout/*": ["app/layout/*"],
            "@module": ["app/module"],
            "@module/*": ["app/module/*"],
            "@testing": ["testing"],
            "@testing/*": ["testing/*"],
            "@env": ["environments"],
            "@env/*": ["environments/*"]
        }
    },
    "angularCompilerOptions": {
        "enableI18nLegacyMessageIdFormat": false
    }
}
